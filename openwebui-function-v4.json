{
  "name": "intelligent_rag_query",
  "description": "Query the intelligent RAG server",
  "parameters": {
    "type": "object",
    "properties": {
      "projectId": {
        "type": "string",
        "description": "The project ID to query against"
      },
      "thinkingDepth": {
        "type": "integer",
        "description": "Depth of thinking (1-4). Higher values use more sophisticated processing",
        "default": 2,
        "enum": [1, 2, 3, 4]
      }
    },
    "required": ["projectId"]
  },
  "url": "http://localhost:3000/api/query",
  "method": "POST",
  "headers": {
    "Content-Type": "application/json"
  },
  "requestTemplate": {
    "projectId": "{{parameters.projectId}}",
    "query": "{{input}}",
    "thinkingDepth": "{{parameters.thinkingDepth}}"
  },
  "responseTemplate": {
    "output": "{{response.answer}}",
    "metadata": "{{response.log}}"
  }
}