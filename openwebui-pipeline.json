{
  "name": "Intelligent RAG Pipeline",
  "description": "A pipeline that uses the intelligent-rag-server for enhanced RAG capabilities",
  "version": "1.0.0",
  "type": "api",
  "config": {
    "url": "http://localhost:3000/api/query",
    "method": "POST",
    "headers": {
      "Content-Type": "application/json"
    },
    "parameters": {
      "projectId": {
        "type": "string",
        "description": "The project ID to query against",
        "required": true
      },
      "thinkingDepth": {
        "type": "number",
        "description": "Depth of thinking (1-4). Higher values use more sophisticated processing",
        "default": 2,
        "minimum": 1,
        "maximum": 4
      }
    },
    "requestTemplate": {
      "projectId": "{{parameters.projectId}}",
      "query": "{{input}}",
      "thinkingDepth": "{{parameters.thinkingDepth}}"
    },
    "responseTemplate": {
      "output": "{{response.answer}}",
      "metadata": {
        "reasoning": "{{response.log}}"
      }
    },
    "errorTemplate": {
      "error": "{{error.message}}"
    }
  }
}