{
  "functions": [
    {
      "name": "intelligent_rag_query",
      "description": "Query the intelligent RAG server with enhanced capabilities",
      "parameters": {
        "type": "object",
        "properties": {
          "projectId": {
            "type": "string",
            "description": "The project ID to query against"
          },
          "thinkingDepth": {
            "type": "integer",
            "description": "Depth of thinking (1-4). Higher values use more sophisticated processing",
            "default": 2,
            "minimum": 1,
            "maximum": 4
          }
        },
        "required": ["projectId"]
      },
      "api": {
        "url": "http://localhost:3000/api/query",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ],
  "examples": [
    {
      "role": "user",
      "content": "What is the main theme of chapter 1?",
      "function_call": {
        "name": "intelligent_rag_query",
        "parameters": {
          "projectId": "default",
          "thinkingDepth": 2
        }
      }
    },
    {
      "role": "user",
      "content": "Compare and contrast the characters' motivations throughout the story.",
      "function_call": {
        "name": "intelligent_rag_query",
        "parameters": {
          "projectId": "default",
          "thinkingDepth": 4
        }
      }
    }
  ]
}